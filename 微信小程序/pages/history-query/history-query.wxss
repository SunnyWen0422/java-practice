/* 日历模块优化 */
.calendar-container {
    background: white;
    border-radius: 24rpx;
    padding: 32rpx;
    margin: 24rpx;
    box-shadow: 0 8rpx 40rpx rgba(0,0,0,0.08);
}

.calendar-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 24rpx;
}

.selected-date {
    font-size: 36rpx;
    font-weight: 500;
    color: var(--text-primary);
}

.date-summary {
    background: var(--bg-gradient);
    border-radius: 16rpx;
    padding: 24rpx;
    margin-top: 24rpx;
    text-align: center;
    font-size: 28rpx;
    color: var(--text-secondary);
}

/* 列表模块优化 */
.list-container {
    margin: 24rpx;
}

.record-card {
    background: white;
    border-radius: 24rpx;
    margin-bottom: 24rpx;
    padding: 32rpx;
    box-shadow: 0 8rpx 40rpx rgba(0,0,0,0.08);
    transition: transform 0.2s ease;
}

.record-card:active {
    transform: scale(0.98);
}

.time-range {
    display: flex;
    align-items: center;
    gap: 16rpx;
    margin-bottom: 16rpx;
}

.time {
    font-size: 28rpx;
    color: var(--text-primary);
}

.separator {
    color: var(--text-secondary);
}

.duration-badge {
    background: var(--primary-color);
    color: white;
    padding: 8rpx 24rpx;
    border-radius: 40rpx;
    font-size: 24rpx;
    display: inline-block;
}

/* 视图切换器优化 */
.view-switcher {
    display: flex;
    background: white;
    border-radius: 24rpx;
    margin: 24rpx;
    padding: 8rpx;
    box-shadow: 0 8rpx 40rpx rgba(0,0,0,0.08);
}

.switch-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 16rpx;
    border-radius: 16rpx;
    transition: all 0.2s ease;
}

.switch-item.active {
    background: var(--primary-color);
}

.switch-item.active .iconfont,
.switch-item.active text {
    color: white;
}

.iconfont {
    font-size: 40rpx;
    margin-bottom: 8rpx;
    color: var(--text-secondary);
}

/* 空状态优化 */
.empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 80rpx 0;
}

.empty-state .iconfont {
    font-size: 80rpx;
    color: var(--text-secondary);
    margin-bottom: 24rpx;
}

.empty-state text {
    font-size: 28rpx;
    color: var(--text-secondary);
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 32rpx;
  color: var(--text-secondary);
}

.button-group .btn {
  background-color: var(--primary-color);
  color: white;
  border-radius: 8rpx;
  padding: 16rpx;
  transition: all 0.2s ease;
}

.button-group .btn:active {
  transform: scale(0.95);
}
