/* 头部卡片 */
.header-card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin: 30rpx;
  box-shadow: var(--card-shadow);
}

.total-text {
  display: block;
  color: var(--text-secondary);
  font-size: 28rpx;
}

.total-duration {
  font-size: 56rpx;
  color: var(--text-primary);
  font-weight: 500;
}

/* 视图切换器 */
.view-switcher {
  display: flex;
  background: rgba(255,255,255,0.9);
  border-radius: 12rpx;
  margin: 30rpx;
  padding: 8rpx;
}

.switch-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.switch-item.active {
  background: var(--primary-color);
  color: white;
}

/* 记录卡片 */
.record-card {
  background: white;
  border-radius: 16rpx;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: var(--card-shadow);
}

.duration-badge {
  background: var(--primary-color);
  color: white;
  padding: 8rpx 20rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
}